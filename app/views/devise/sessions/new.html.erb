<div class="grid grid-cols-2">
  <div class="container mx-auto px-10">
    <header>
      <h1 class="text-3xl font-bold mt-3">money pro</h1>
    </header>
      <h2 class="text-gray-800 text-2xl mb-10 mt-20">Fa√ßa seu logim</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-5">
        <%= f.label :email, class: 'inline-block opacity-80 mb-2' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-md w-full focus:bg-blue-50' %>
      </div>

      <div class="field mb-5">
        <%= f.label :password, class: 'inline-block opacity-80 mb-2' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'rounded-md w-full focus:bg-blue-50' %>
      </div>

      <div class="action">
        <%= f.submit "Entrar", class: 'bg-blue-400 text-white mb-4 text-medium w-full rounded-md py-2 cursor-pointer hover:bg-blue-600 transition-all' %>
      </div>
      <div class="flex flex-col justify-center items-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
  <div class="h-full">
    <%= image_tag 'img_login.png'%>
  </div>
</div>

